<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL-Shortner</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<nav class="navbar bg-dark border-bottom navbar-expand-lg">
    <div class="container-fluid px-5">
        <a class="navbar-brand ms-5" href="/">URL-Shortner</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        <span class="navbar-toggler-icon"></span>
        <span class="navbar-toggler-icon"></span>

        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto ps-5 mb-2 mb-lg-0">
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/signup">Sign Up</a>
                </li>
                <li class="nav-item">
                <% if(!user) { %>
                <a class="nav-link" href="login">Log In</a>
                <% } else { %>
                    <a class="nav-link" href="/logout">Log Out</a>
                <% } %>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/contact">Contact Us</a>
                </li>

            </ul>
        </div>
    </div>
</nav>

    <section class="link-section py-5">
        <div class="container-fluid">
            <div class="heading text-center">
                <h1 class="text-uppercase">
                    link shortener app
                </h1>
            </div>
        </div>
        <div class="container py-4">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <div class="link-container border p-4 rounded justify-content-center">
                    <form action="/" method="post" class="">
                        <div class="mb-3">
                            <label for="url" class="form-label">Enter URL</label>
                            <input type="url" class="form-control" id="url" name="url" required style="height: 40px;">
                        </div>
                        <div class="mb-3">
                            <label for="shortUrl" class="form-label">Custom Short URL </label>
                            <input type="text" class="form-control" id="shortUrl" name="shortUrl" style="height: 40px;">
                        </div>

                    <% if (message && message.length > 0) { %>
                    <div class="alert alert-info">
                        <p class="text-dark">
                            <%= Array.isArray(message) ? message[0] : message %>
                        </p>
                    </div>
                    <% } %>
                        <button type="submit" class="btn btn-primary ">Shorten</button>
                    </form>
                </div>

                <div class="link-shorten d-flex flex-column align-items-center justify-content-center mb-3 mt-5">
                    <h3 class="mb-3">Shortened Links</h3>
                    <div class="shortened d-flex flex-column align-items-center justify-content-center">
                        <% if(links && links.length > 0) { %>
                        <ul >
                            <% links.forEach(link => {  %>
                            <li><a href="<%= link.longUrl %>" target="_blank"><strong><%= host %>/<%= link.shortUrl %></strong></a> -><%= link.longUrl %></li>
                            <% }) %>
                        </ul>
                        <% } else { %> 
                            <span> No Short URL Created!</span>
                       <% } %>     
                    </div>
                </div>
            </div>
        </div>
    </section>

   <section class="footer">
    <div class="d-flex align-items-center justify-content-center">
        <span>copyright &copy; 2024</span>
    </div>
   </section>
    
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>