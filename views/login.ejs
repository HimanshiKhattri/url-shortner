    <section class="link-section py-5">
        <div class="container-fluid">
            <div class="heading text-center">
                <h1 class="text-uppercase">
                    link shortener tool
                </h1>
                <p class="mb-0 text-white">Log In to Continue Creating Your Shortened URLs!</p>
            </div>
        </div>
        <div class="container py-4">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <div class="link-container border p-4 rounded justify-content-center">
                    <h5 class="text-capitalize py-1 text-dark text-center">Log in</h5>
                    <form action="/login" method="post" class="">
                        <div class="mb-3">
                            <label for="email" class="form-label">Enter Email</label>
                            <input type="email" class="form-control" id="email" name="email" required style="height: 40px;">
                        </div>
                        <div class="mb-3 position-relative">
                            <label for="password" class="form-label">Enter Password </label>
                            <input type="password" class="form-control" id="password" name="password" required style="height: 40px;">
                            <span id="togglePassword" class="eye-button">üëÅÔ∏è</span>
                        </div>

                       <% if (message && message.length > 0) { %>
                        <div class="alert alert-info">
                        <p class="text-dark">
                            <%= Array.isArray(message) ? message[0] : message %>
                        </p>
                        </div>
                        <% } %>
                        <button type="submit" class="btn btn-primary ">Log In</button>
                    </form>
                </div>

            </div>
        </div>
    </section>

